<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusable="true"
    android:orientation="vertical"
    android:paddingStart="@dimen/_16dp"
    android:paddingEnd="@dimen/_16dp"
    tools:ignore="MissingPrefix,ContentDescription">

    <LinearLayout
        android:id="@+id/fragSearchList_llCheckList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            fontPath="@string/Helvetica_Bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:text="@string/search_list_checkListType"
            android:textColor="@color/blueMain"
            android:textSize="@dimen/_17dp"
            tools:ignore="MissingPrefix"/>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/_35dp"
            android:layout_weight="0.6">

            <include layout="@layout/item_drop_down_arrow"/>

            <TextView
                android:id="@+id/fragSearchList_tvCheckList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="@drawable/shape_border_deep_orange_text_view"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/_10dp"
                android:paddingEnd="@dimen/_10dp"
                android:textColor="@color/blueMain"
                android:textSize="@dimen/_14dp"/>

        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_30dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            fontPath="@string/Helvetica_Bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:text="@string/search_list_serviceType"
            android:textColor="@color/blueMain"
            android:textSize="@dimen/_17dp"
            tools:ignore="MissingPrefix"/>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/_35dp"
            android:layout_weight="0.6">

            <include layout="@layout/item_drop_down_arrow"/>

            <TextView
                android:id="@+id/fragSearchList_tvServiceType"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="@drawable/shape_border_deep_orange_text_view"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/_10dp"
                android:paddingEnd="@dimen/_10dp"
                android:textColor="@color/blueMain"
                android:textSize="@dimen/_14dp"/>

        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_30dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            fontPath="@string/Helvetica_Bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:text="@string/search_list_fromDate"
            android:textColor="@color/blueMain"
            android:textSize="@dimen/_17dp"
            tools:ignore="MissingPrefix"/>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/_35dp"
            android:layout_weight="0.6">

            <include layout="@layout/item_drop_down_arrow"/>

            <TextView
                android:id="@+id/fragSearchList_tvFromDate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="@drawable/shape_border_deep_orange_text_view"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/_10dp"
                android:paddingEnd="@dimen/_10dp"
                android:textColor="@color/blueMain"
                android:textSize="@dimen/_14dp"/>

        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_30dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            fontPath="@string/Helvetica_Bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:text="@string/search_list_toDate"
            android:textColor="@color/blueMain"
            android:textSize="@dimen/_17dp"
            tools:ignore="MissingPrefix"/>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/_35dp"
            android:layout_weight="0.6">

            <include layout="@layout/item_drop_down_arrow"/>

            <TextView
                android:id="@+id/fragSearchList_tvToDate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="@drawable/shape_border_deep_orange_text_view"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/_10dp"
                android:paddingEnd="@dimen/_10dp"
                android:textColor="@color/blueMain"
                android:textSize="@dimen/_14dp"/>

        </FrameLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/fragSearchList_tvView"
        fontPath="@string/Helvetica_Bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_button"
        android:gravity="center_horizontal|center_vertical"
        android:paddingStart="@dimen/_70dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_40dp"
        android:paddingTop="@dimen/_15dp"
        android:paddingEnd="@dimen/_70dp"
        android:paddingBottom="@dimen/_15dp"
        android:text="@string/search_list_view"
        android:textColor="@color/white"
        android:textSize="@dimen/_20dp"/>

</LinearLayout>