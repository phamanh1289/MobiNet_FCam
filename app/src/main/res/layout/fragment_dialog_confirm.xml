<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginStart="@dimen/_20dp"
    android:layout_marginEnd="@dimen/_20dp"
    android:background="@drawable/shape_circle_dialog_while"
    android:orientation="vertical"
    tools:ignore="MissingPrefix">

    <TextView
        android:id="@+id/fragDialogConfirm_tvTitle"
        fontPath="@string/Helvetica_Bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8dp"
        android:layout_marginTop="@dimen/_8dp"
        android:textColor="@color/redMain"
        android:textSize="@dimen/_20dp"/>

    <TextView
        android:id="@+id/fragDialogConfirm_tvContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="@dimen/_5dp"
        android:paddingStart="@dimen/_8dp"
        android:paddingEnd="@dimen/_8dp"
        android:textColor="@color/blueMain"
        android:textSize="@dimen/_16dp"
        tools:text="You must "/>

    <View
        android:id="@+id/fragDialogConfirm_vLineVertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1dp"
        android:layout_marginTop="@dimen/_8dp"
        android:background="@color/silver"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/fragDialogConfirm_tvCancel"
            android:layout_width="0dp"
            android:layout_height="@dimen/_50dp"
            android:layout_marginStart="@dimen/_8dp"
            android:layout_marginEnd="@dimen/_8dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/action_cancel"
            android:textColor="@color/blueMain"
            android:textSize="@dimen/_17dp"
            android:visibility="gone"/>

        <View
            android:id="@+id/fragDialogConfirm_vLineHorizontal"
            android:layout_width="@dimen/_1dp"
            android:layout_height="match_parent"
            android:background="@color/silver"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/fragDialogConfirm_tvOK"
            fontPath="@string/Helvetica_Bold"
            android:layout_width="0dp"
            android:layout_height="@dimen/_50dp"
            android:layout_marginStart="@dimen/_8dp"
            android:layout_marginEnd="@dimen/_8dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/action_ok"
            android:textColor="@color/redMain"
            android:textSize="@dimen/_17dp"/>
    </LinearLayout>
</LinearLayout>