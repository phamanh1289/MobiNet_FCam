<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:ignore="MissingPrefix">

    <TextView
        android:id="@+id/text1"
        fontPath="@string/Helvetica_Bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_16dp"
        android:text="@string/update_modem"
        android:textColor="@color/blueMain"
        android:textSize="@dimen/_17dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/fragUpdateContract_tvModem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16dp"
        android:background="@drawable/shape_border_deep_orange_text_view"
        android:gravity="center_horizontal"
        android:paddingStart="@dimen/_8dp"
        android:paddingTop="@dimen/_8dp"
        android:paddingEnd="@dimen/_32dp"
        android:paddingBottom="@dimen/_8dp"
        android:textColor="@color/blueMain"
        android:textSize="@dimen/_15dp"
        app:layout_constraintBottom_toBottomOf="@+id/text1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/text2"
        app:layout_constraintTop_toTopOf="@+id/text1"/>

    <include
        android:id="@+id/include"
        layout="@layout/item_drop_down_arrow"
        android:layout_width="@dimen/_30dp"
        android:layout_height="@dimen/_30dp"
        android:layout_marginEnd="@dimen/_2dp"
        app:layout_constraintBottom_toBottomOf="@+id/fragUpdateContract_tvModem"
        app:layout_constraintEnd_toEndOf="@+id/fragUpdateContract_tvModem"
        app:layout_constraintTop_toTopOf="@+id/fragUpdateContract_tvModem"/>

    <TextView
        android:id="@+id/text2"
        fontPath="@string/Helvetica_Bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/update_amount"
        android:textColor="@color/blueMain"
        android:textSize="@dimen/_17dp"
        app:layout_constraintBottom_toBottomOf="@+id/fragUpdateContract_tvAmountModem"
        app:layout_constraintTop_toTopOf="@+id/fragUpdateContract_tvAmountModem"/>

    <EditText
        android:id="@+id/fragUpdateContract_tvAmountModem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_16dp"
        android:background="@drawable/shape_border_deep_orange_text_view"
        android:gravity="center_horizontal"
        android:hint="@string/no_value"
        android:inputType="number"
        android:paddingStart="@dimen/_8dp"
        android:paddingTop="@dimen/_8dp"
        android:paddingEnd="@dimen/_32dp"
        android:paddingBottom="@dimen/_8dp"
        android:textColor="@color/blueMain"
        android:textSize="@dimen/_15dp"
        app:layout_constraintEnd_toEndOf="@+id/fragUpdateContract_tvModem"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/fragUpdateContract_tvModem"
        app:layout_constraintTop_toBottomOf="@+id/fragUpdateContract_tvModem"/>

    <TextView
        android:id="@+id/text3"
        fontPath="@string/Helvetica_Bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/update_type"
        android:textColor="@color/blueMain"
        android:textSize="@dimen/_17dp"
        app:layout_constraintBottom_toBottomOf="@+id/fragUpdateContract_tvTypeModem"
        app:layout_constraintTop_toTopOf="@+id/fragUpdateContract_tvTypeModem"/>

    <TextView
        android:id="@+id/fragUpdateContract_tvTypeModem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_16dp"
        android:background="@drawable/shape_border_deep_orange_text_view"
        android:gravity="center_horizontal"
        android:paddingStart="@dimen/_8dp"
        android:paddingTop="@dimen/_8dp"
        android:paddingEnd="@dimen/_32dp"
        android:paddingBottom="@dimen/_8dp"
        android:textColor="@color/blueMain"
        android:textSize="@dimen/_15dp"
        app:layout_constraintEnd_toEndOf="@+id/fragUpdateContract_tvAmountModem"
        app:layout_constraintStart_toStartOf="@+id/fragUpdateContract_tvAmountModem"
        app:layout_constraintTop_toBottomOf="@+id/fragUpdateContract_tvAmountModem"/>

    <include
        android:id="@+id/include2"
        layout="@layout/item_drop_down_arrow"
        android:layout_width="@dimen/_30dp"
        android:layout_height="@dimen/_30dp"
        android:layout_marginEnd="@dimen/_2dp"
        app:layout_constraintBottom_toBottomOf="@+id/fragUpdateContract_tvTypeModem"
        app:layout_constraintEnd_toEndOf="@+id/fragUpdateContract_tvTypeModem"
        app:layout_constraintTop_toTopOf="@+id/fragUpdateContract_tvTypeModem"/>

    <View
        android:id="@+id/view1"
        android:layout_width="0dp"
        android:layout_height="@dimen/_3dp"
        android:layout_marginTop="24dp"
        android:background="@color/silver"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragUpdateContract_tvTypeModem"/>

    <TextView
        android:id="@+id/text4"
        fontPath="@string/Helvetica_Bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/update_stb"
        android:textColor="@color/blueMain"
        android:textSize="@dimen/_17dp"
        app:layout_constraintBottom_toBottomOf="@+id/fragUpdateContract_tvStb"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/fragUpdateContract_tvStb"/>

    <TextView
        android:id="@+id/fragUpdateContract_tvStb"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16dp"
        android:layout_marginTop="@dimen/_30dp"
        android:background="@drawable/shape_border_deep_orange_text_view"
        android:gravity="center_horizontal"
        android:paddingStart="@dimen/_8dp"
        android:paddingTop="@dimen/_8dp"
        android:paddingEnd="@dimen/_32dp"
        android:paddingBottom="@dimen/_8dp"
        android:textColor="@color/blueMain"
        android:textSize="@dimen/_15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/text2"
        app:layout_constraintTop_toBottomOf="@+id/view1"/>

    <include
        android:id="@+id/include"
        layout="@layout/item_drop_down_arrow"
        android:layout_width="@dimen/_30dp"
        android:layout_height="@dimen/_30dp"
        android:layout_marginEnd="@dimen/_2dp"
        app:layout_constraintBottom_toBottomOf="@+id/fragUpdateContract_tvStb"
        app:layout_constraintEnd_toEndOf="@+id/fragUpdateContract_tvStb"
        app:layout_constraintTop_toTopOf="@+id/fragUpdateContract_tvStb"/>

    <TextView
        android:id="@+id/text5"
        fontPath="@string/Helvetica_Bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/update_amount"
        android:textColor="@color/blueMain"
        android:textSize="@dimen/_17dp"
        app:layout_constraintBottom_toBottomOf="@+id/fragUpdateContract_tvAmountStb"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/fragUpdateContract_tvAmountStb"
        app:layout_constraintVertical_bias="1.0"/>

    <EditText
        android:id="@+id/fragUpdateContract_tvAmountStb"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_16dp"
        android:background="@drawable/shape_border_deep_orange_text_view"
        android:gravity="center_horizontal"
        android:hint="@string/no_value"
        android:inputType="number"
        android:paddingStart="@dimen/_8dp"
        android:paddingTop="@dimen/_8dp"
        android:paddingEnd="@dimen/_32dp"
        android:paddingBottom="@dimen/_8dp"
        android:textColor="@color/blueMain"
        android:textSize="@dimen/_15dp"
        app:layout_constraintEnd_toEndOf="@+id/include"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/fragUpdateContract_tvStb"
        app:layout_constraintTop_toBottomOf="@+id/fragUpdateContract_tvStb"/>

    <TextView
        android:id="@+id/text6"
        fontPath="@string/Helvetica_Bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/update_type"
        android:textColor="@color/blueMain"
        android:textSize="@dimen/_17dp"
        app:layout_constraintBottom_toBottomOf="@+id/fragUpdateContract_tvTypeStb"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/fragUpdateContract_tvTypeStb"/>

    <TextView
        android:id="@+id/fragUpdateContract_tvTypeStb"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_16dp"
        android:background="@drawable/shape_border_deep_orange_text_view"
        android:gravity="center_horizontal"
        android:paddingStart="@dimen/_8dp"
        android:paddingTop="@dimen/_8dp"
        android:paddingEnd="@dimen/_32dp"
        android:paddingBottom="@dimen/_8dp"
        android:textColor="@color/blueMain"
        android:textSize="@dimen/_15dp"
        app:layout_constraintEnd_toEndOf="@+id/fragUpdateContract_tvAmountModem"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/fragUpdateContract_tvAmountModem"
        app:layout_constraintTop_toBottomOf="@+id/fragUpdateContract_tvAmountStb"/>

    <include
        android:id="@+id/include2"
        layout="@layout/item_drop_down_arrow"
        android:layout_width="@dimen/_30dp"
        android:layout_height="@dimen/_30dp"
        android:layout_marginEnd="@dimen/_2dp"
        app:layout_constraintBottom_toBottomOf="@+id/fragUpdateContract_tvTypeStb"
        app:layout_constraintEnd_toEndOf="@+id/fragUpdateContract_tvTypeStb"
        app:layout_constraintTop_toTopOf="@+id/fragUpdateContract_tvTypeStb"/>

</android.support.constraint.ConstraintLayout>