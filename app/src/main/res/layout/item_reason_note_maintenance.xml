<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:scrollbars="none"
    tools:ignore="MissingPrefix,Autofill">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reason_maintenance_general_note"
            android:textColor="@color/blueMain"
            android:textSize="@dimen/_15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16dp"
            android:text="@string/update_new_note"
            android:textColor="@color/blueMain"
            android:textSize="@dimen/_15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragUpdateContractMaintenance_tvGeneralNote"/>

        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16dp"
            android:text="@string/update_result"
            android:textColor="@color/blueMain"
            android:textSize="@dimen/_15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragUpdateContractMaintenance_etNewNote"/>

        <TextView
            android:id="@+id/text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16dp"
            android:text="@string/item_result_assign_date"
            android:textColor="@color/blueMain"
            android:textSize="@dimen/_15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragUpdateContractMaintenance_tvResult"/>

        <TextView
            android:id="@+id/fragUpdateContractMaintenance_tvGeneralNote"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16dp"
            android:layout_marginTop="@dimen/_8dp"
            android:layout_marginEnd="@dimen/_16dp"
            android:background="@drawable/shape_border_deep_orange_text_view"
            android:hint="@string/empty"
            android:padding="@dimen/_8dp"
            android:textColor="@color/blueMain"
            android:textSize="@dimen/_15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/text1"
            app:layout_constraintTop_toBottomOf="@+id/text1"/>

        <EditText
            android:id="@+id/fragUpdateContractMaintenance_etNewNote"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8dp"
            android:background="@drawable/shape_border_deep_orange_text_view"
            android:hint="@string/empty"
            android:inputType="none"
            android:padding="@dimen/_8dp"
            android:textColor="@color/blueMain"
            android:textSize="@dimen/_15dp"
            app:layout_constraintEnd_toEndOf="@+id/fragUpdateContractMaintenance_tvGeneralNote"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/fragUpdateContractMaintenance_tvGeneralNote"
            app:layout_constraintTop_toBottomOf="@+id/text2"/>

        <TextView
            android:id="@+id/fragUpdateContractMaintenance_tvResult"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8dp"
            android:background="@drawable/shape_border_deep_orange_text_view"
            android:gravity="center_horizontal"
            android:paddingStart="@dimen/_8dp"
            android:paddingTop="@dimen/_8dp"
            android:paddingEnd="@dimen/_32dp"
            android:paddingBottom="@dimen/_8dp"
            android:text="@string/type_cable_05_mm"
            android:textColor="@color/blueMain"
            android:textSize="@dimen/_15dp"
            app:layout_constraintEnd_toEndOf="@+id/fragUpdateContractMaintenance_etNewNote"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/fragUpdateContractMaintenance_tvGeneralNote"
            app:layout_constraintTop_toBottomOf="@+id/text3"/>

        <include
            android:id="@+id/include5"
            layout="@layout/item_drop_down_arrow"
            android:layout_width="@dimen/_30dp"
            android:layout_height="@dimen/_30dp"
            android:layout_marginEnd="@dimen/_2dp"
            app:layout_constraintBottom_toBottomOf="@+id/fragUpdateContractMaintenance_tvResult"
            app:layout_constraintEnd_toEndOf="@+id/fragUpdateContractMaintenance_tvResult"
            app:layout_constraintTop_toTopOf="@+id/fragUpdateContractMaintenance_tvResult"/>

        <TextView
            android:id="@+id/fragUpdateContractMaintenance_tvAssignDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8dp"
            android:background="@drawable/shape_border_deep_orange_text_view"
            android:gravity="center_horizontal"
            android:hint="@string/hint_date"
            android:padding="@dimen/_8dp"
            android:textColor="@color/blueMain"
            android:textSize="@dimen/_15dp"
            app:layout_constraintEnd_toEndOf="@+id/fragUpdateContractMaintenance_tvGeneralNote"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/fragUpdateContractMaintenance_tvGeneralNote"
            app:layout_constraintTop_toBottomOf="@+id/text4"/>

    </android.support.constraint.ConstraintLayout>
</ScrollView>