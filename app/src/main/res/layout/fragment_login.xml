<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusable="true"
    android:gravity="center_horizontal|center_vertical"
    android:orientation="vertical"
    tools:ignore="ContentDescription,Autofill,MissingPrefix">

    <ImageView
        android:layout_width="@dimen/_130dp"
        android:layout_height="@dimen/_80dp"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/_30dp"
        android:src="@drawable/img_banner"/>

    <EditText
        android:id="@+id/fragLogin_tvUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16dp"
        android:layout_marginTop="@dimen/_16dp"
        android:layout_marginEnd="@dimen/_16dp"
        android:background="@drawable/shape_circle_red_two"
        android:hint="@string/login_user_name"
        android:inputType="text"
        android:maxLines="1"
        android:padding="@dimen/_8dp"
        android:textColor="@color/blueMain"
        android:textColorHint="@color/blueMain"
        android:textSize="@dimen/_17dp"/>

    <EditText
        android:id="@+id/fragLogin_tvPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16dp"
        android:layout_marginTop="@dimen/_30dp"
        android:layout_marginEnd="@dimen/_16dp"
        android:background="@drawable/shape_circle_red_two"
        android:hint="@string/login_password"
        android:inputType="textPassword"
        android:maxLines="1"
        android:padding="@dimen/_8dp"
        android:textColor="@color/blueMain"
        android:textColorHint="@color/blueMain"
        android:textSize="@dimen/_17dp"/>

    <LinearLayout
        android:id="@+id/fragLogin_cbShowPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_20dp"
        android:gravity="center"
        android:orientation="horizontal"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:id="@+id/fragLogin_imgDoneError"
            android:layout_width="@dimen/_30dp"
            android:layout_height="@dimen/_30dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/selector_check_box"/>

        <TextView
            android:id="@+id/fragLogin_tvDoneError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_8dp"
            android:text="@string/login_show_password"
            android:textColor="@drawable/selector_text"
            android:textSize="@dimen/_16dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/fragLogin_tvSubmit"
        fontPath="@string/Helvetica_Bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_20dp"
        android:background="@drawable/selector_button"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical|center_horizontal"
        android:padding="@dimen/_16dp"
        android:paddingStart="@dimen/_70dp"
        android:paddingTop="@dimen/_10dp"
        android:paddingEnd="@dimen/_70dp"
        android:paddingBottom="@dimen/_10dp"
        android:text="@string/login"
        android:textColor="@color/white"
        android:textSize="@dimen/_17dp"/>
</LinearLayout>