<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/_16dp"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="@dimen/_110dp"
        android:layout_height="@dimen/_110dp"
        android:background="@drawable/shape_circle_red_menu"
        android:layout_gravity="center_horizontal"
        tools:ignore="UselessParent">

        <ImageView
            android:id="@+id/itemMenuMain_imgView"
            android:layout_width="@dimen/_60dp"
            android:layout_height="@dimen/_60dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:src="@drawable/ic_menu_deployment"
            tools:ignore="ContentDescription"/>
    </FrameLayout>

    <TextView
        android:id="@+id/itemMenuMain_textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Maintance"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/_17dp"
        android:layout_marginTop="@dimen/_8dp"
        android:textColor="@color/blueMain"/>

</LinearLayout>
