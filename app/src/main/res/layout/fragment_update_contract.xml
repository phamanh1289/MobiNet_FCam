<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusable="true"
    android:padding="@dimen/_16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="fragUpdateContract_layoutInDoor"
            layout="@layout/item_cable"/>

        <include
            android:id="fragUpdateContract_layoutInfo"
            layout="@layout/item_cable_info"/>

        <include
            android:id="fragUpdateContract_layoutSTB"
            layout="@layout/item_modem_stb"/>

        <include
            android:id="fragUpdateContract_layoutReason"
            layout="@layout/item_reason_result"/>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>