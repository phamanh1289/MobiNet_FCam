<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusable="true"
    android:orientation="vertical"
    android:padding="@dimen/_8dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <include
            android:id="@+id/fragUpdateContract_llCable"
            layout="@layout/item_cable"/>

        <include
            android:id="@+id/fragUpdateContract_llCableInfo"
            layout="@layout/item_cable_info"
            android:visibility="gone"/>

        <include
            android:id="@+id/fragUpdateContract_llModemStb"
            layout="@layout/item_modem_stb"
            android:visibility="gone"/>

        <include
            android:id="@+id/fragUpdateContract_llReasonResult"
            layout="@layout/item_reason_result"
            android:visibility="gone"/>
    </FrameLayout>

    <View
        android:layout_width="@dimen/_150dp"
        android:layout_height="@dimen/_5dp"
        android:layout_marginTop="@dimen/_4dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/silver"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/fragUpdateContract_tvBack"
            android:layout_width="0dp"
            android:layout_height="@dimen/_50dp"
            android:layout_marginStart="@dimen/_8dp"
            android:layout_marginEnd="@dimen/_8dp"
            android:layout_weight="1"
            android:background="@drawable/selector_button"
            android:gravity="center"
            android:text="@string/back"
            android:textColor="@color/white"
            android:textSize="@dimen/_17dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/fragUpdateContract_tvNext"
            android:layout_width="0dp"
            android:layout_height="@dimen/_50dp"
            android:layout_marginStart="@dimen/_8dp"
            android:layout_marginEnd="@dimen/_8dp"
            android:layout_weight="1"
            android:background="@drawable/selector_button"
            android:gravity="center"
            android:text="@string/next"
            android:textColor="@color/white"
            android:textSize="@dimen/_17dp"/>
    </LinearLayout>
</LinearLayout>