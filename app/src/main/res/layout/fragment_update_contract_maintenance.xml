<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusable="true"
    android:orientation="vertical"
    android:padding="@dimen/_8dp">

    <TextView
        android:id="@+id/fragUpdateContractMaintenance_tvStep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/shape_circle_red_main"
        android:paddingStart="@dimen/_20dp"
        android:paddingTop="@dimen/_10dp"
        android:paddingEnd="@dimen/_20dp"
        android:paddingBottom="@dimen/_10dp"
        android:textColor="@color/white"
        android:textSize="@dimen/_15dp"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <include
            android:id="@+id/fragUpdateContractMaintenance_llReasonMaintenance"
            layout="@layout/item_reason_maintenance"
            android:visibility="gone"/>

        <include
            android:id="@+id/fragUpdateContractMaintenance_llCable"
            layout="@layout/item_reason_cable_maintenance"
            android:visibility="gone"/>

        <include
            android:id="@+id/fragUpdateContractMaintenance_llCableInfo"
            layout="@layout/item_cable_info"
            android:visibility="gone"/>

        <include
            android:id="@+id/fragUpdateContractMaintenance_llReasonNote"
            layout="@layout/item_reason_note_maintenance"
            android:visibility="gone"/>
    </FrameLayout>

    <View
        android:layout_width="@dimen/_150dp"
        android:layout_height="@dimen/_5dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_4dp"
        android:background="@color/silver"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/fragUpdateContractMaintenance_tvBack"
            android:layout_width="0dp"
            android:layout_height="@dimen/_50dp"
            android:layout_marginStart="@dimen/_8dp"
            android:layout_marginEnd="@dimen/_8dp"
            android:layout_weight="1"
            android:background="@drawable/selector_button"
            android:gravity="center"
            android:text="@string/back"
            android:textColor="@color/white"
            android:textSize="@dimen/_17dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/fragUpdateContractMaintenance_tvNext"
            android:layout_width="0dp"
            android:layout_height="@dimen/_50dp"
            android:layout_marginStart="@dimen/_8dp"
            android:layout_marginEnd="@dimen/_8dp"
            android:layout_weight="1"
            android:background="@drawable/selector_button"
            android:gravity="center"
            android:text="@string/next"
            android:textColor="@color/white"
            android:textSize="@dimen/_17dp"/>
    </LinearLayout>

</LinearLayout>