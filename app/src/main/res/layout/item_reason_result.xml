<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:scrollbars="none"
    tools:ignore="MissingPrefix,NestedWeights">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/_8dp">

            <TextView
                fontPath="@string/Helvetica_Bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="@string/update_odc_cable"
                android:textColor="@color/blueMain"
                android:textSize="@dimen/_14dp"/>

            <TextView
                android:id="@+id/fragUpdateContract_tvOdcCable"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:hint="@string/empty"
                android:textColor="@color/blueMain"
                android:textSize="@dimen/_14dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/_8dp">

            <TextView
                fontPath="@string/Helvetica_Bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="@string/update_old_note"
                android:textColor="@color/blueMain"
                android:textSize="@dimen/_14dp"/>

            <TextView
                android:id="@+id/fragUpdateContract_tvOldNote"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:hint="@string/empty"
                android:textColor="@color/blueMain"
                android:textSize="@dimen/_14dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/_8dp">

            <TextView
                fontPath="@string/Helvetica_Bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="@string/update_new_note"
                android:textColor="@color/blueMain"
                android:textSize="@dimen/_14dp"/>

            <EditText
                android:id="@+id/fragUpdateContract_etNewNote"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:background="@drawable/shape_border_deep_orange_text_view"
                android:hint="@string/empty"
                android:padding="@dimen/_8dp"
                android:textColor="@color/blueMain"
                android:textSize="@dimen/_14dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/_8dp">

            <TextView
                fontPath="@string/Helvetica_Bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="@string/update_from"
                android:textColor="@color/blueMain"
                android:textSize="@dimen/_14dp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/_35dp"
                android:layout_weight="0.6"
                android:background="@drawable/shape_border_deep_orange_text_view"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/fragUpdateContract_tvFrom"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal"
                    android:hint="@string/hint_date"
                    android:textColor="@color/blueMain"
                    android:textSize="@dimen/_14dp"/>

                <include
                    android:id="@+id/fragUpdateContract_imgDeleteFrom"
                    layout="@layout/item_delete_clear"
                    android:visibility="gone"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/_8dp">

            <TextView
                fontPath="@string/Helvetica_Bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="@string/update_from_hour"
                android:textColor="@color/blueMain"
                android:textSize="@dimen/_14dp"/>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/_35dp"
                android:layout_weight="0.6">

                <include layout="@layout/item_drop_down_arrow"/>

                <TextView
                    android:id="@+id/fragUpdateContract_tvFromHour"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/shape_border_deep_orange_text_view"
                    android:gravity="center_vertical|center_horizontal"
                    android:paddingStart="@dimen/_2dp"
                    android:paddingEnd="@dimen/_30dp"
                    android:textColor="@color/blueMain"
                    android:textSize="@dimen/_14dp"/>

            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/_8dp">

            <TextView
                fontPath="@string/Helvetica_Bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="@string/update_to"
                android:textColor="@color/blueMain"
                android:textSize="@dimen/_14dp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/_35dp"
                android:layout_weight="0.6"
                android:background="@drawable/shape_border_deep_orange_text_view"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/fragUpdateContract_tvTo"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal"
                    android:hint="@string/hint_date"
                    android:textColor="@color/blueMain"
                    android:textSize="@dimen/_14dp"/>

                <include
                    android:id="@+id/fragUpdateContract_imgDeleteTo"
                    layout="@layout/item_delete_clear"
                    android:visibility="gone"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/_8dp">

            <TextView
                fontPath="@string/Helvetica_Bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="@string/update_to_hour"
                android:textColor="@color/blueMain"
                android:textSize="@dimen/_14dp"/>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/_35dp"
                android:layout_weight="0.6">

                <include layout="@layout/item_drop_down_arrow"/>

                <TextView
                    android:id="@+id/fragUpdateContract_tvToHour"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/shape_border_deep_orange_text_view"
                    android:gravity="center_vertical|center_horizontal"
                    android:paddingStart="@dimen/_2dp"
                    android:paddingEnd="@dimen/_30dp"
                    android:textColor="@color/blueMain"
                    android:textSize="@dimen/_14dp"/>

            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/_8dp">

            <TextView
                fontPath="@string/Helvetica_Bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="@string/update_reason_delay"
                android:textColor="@color/blueMain"
                android:textSize="@dimen/_14dp"/>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/_35dp"
                android:layout_weight="0.6">

                <include layout="@layout/item_drop_down_arrow"/>

                <TextView
                    android:id="@+id/fragUpdateContract_tvReasonDelay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/shape_border_deep_orange_text_view"
                    android:gravity="center_vertical|center_horizontal"
                    android:paddingStart="@dimen/_2dp"
                    android:paddingEnd="@dimen/_30dp"
                    android:textColor="@color/blueMain"
                    android:textSize="@dimen/_14dp"/>

            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/_8dp">

            <TextView
                fontPath="@string/Helvetica_Bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="@string/update_note_reason"
                android:textColor="@color/blueMain"
                android:textSize="@dimen/_14dp"/>

            <EditText
                android:id="@+id/fragUpdateContract_etNoteReasonDelay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:background="@drawable/shape_border_deep_orange_text_view"
                android:hint="@string/empty"
                android:padding="@dimen/_8dp"
                android:textColor="@color/blueMain"
                android:textSize="@dimen/_14dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/_8dp">

            <TextView
                fontPath="@string/Helvetica_Bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="@string/update_result"
                android:textColor="@color/blueMain"
                android:textSize="@dimen/_14dp"/>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/_35dp"
                android:layout_weight="0.6">

                <include layout="@layout/item_drop_down_arrow"/>

                <TextView
                    android:id="@+id/fragUpdateContract_tvResult"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/shape_border_deep_orange_text_view"
                    android:gravity="center_vertical|center_horizontal"
                    android:paddingStart="@dimen/_2dp"
                    android:paddingEnd="@dimen/_30dp"
                    android:textColor="@color/blueMain"
                    android:textSize="@dimen/_14dp"/>

            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>